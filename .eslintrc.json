{
  "extends": ["airbnb", "prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": 0,
    "operator-linebreak": "off",
    "no-bitwise": 0,
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": false,
        "allowTaggedTemplates": false,
        "enforceForJSX": false
      }
    ],
    "no-cond-assign": ["error", "except-parens"],
    "no-plusplus": "off"
  }
}
